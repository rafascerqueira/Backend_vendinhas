{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "engines": {
    "node": "16.17.0"
  },
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules src/shared/infra/http/server.ts",
    "start": "ts-node -r tsconfig-paths/register src/shared/infra/http/server.ts",
    "migrate:dev": "npx prisma migrate dev && yarn start",
    "migrate:start": "npx prisma migrate deploy && yarn serve",
    "build": "tsc",
    "serve": "node ./dist/shared/infra/http/server.js"
  },
  "dependencies": {
    "@prisma/client": "^4.1.1",
    "bcrypt": "^5.0.1",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-async-errors": "^3.1.1",
    "inversify": "^6.0.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongoose": "^6.2.4",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "prisma": "^4.1.1",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.17.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^18.0.0",
    "@types/uuid": "^8.3.4",
    "jest": "^28.1.1",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.6.2"
  },
  "_moduleAliases": {
    "@modules": "dist/modules",
    "@config": "dist/config",
    "@shared": "dist/shared"
  }
}
